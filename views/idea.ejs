  </div>

   <div class="row" style="margin-top: 30px">
    <h1 align="center" style="margin-top: 50px;">Profile</h1>
      <% for(i=0;i<results.length;i++) {%>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src="/assets/img/thumb04.jpg" alt="..." style="padding-top: 20px;">
            <div class="caption" align="center">
              <h3><%= results[i].name %></h3>
              <p><%= results[i].email %></p>
              <p>
                <form method="GET" action="profile">
                  <input type="email" name="email" id="email" hidden="true" value="<%= results[i].email %>">
                  <button class="btn btn-theme btn-lg" type="submit">More Info</button>
                </form>
              </p>
            </div>
          </div>
        </div>
      <% }%>
    </div>
  </div>
